% Callout frame around text
% 
\RequirePackage{mdframed}           % 
%
\newenvironment{callouttip}[1]{     % Define configuration for the mdframed package
    \begin{mdframed}[%
        style=titlecallout,
        linecolor=burlywood, 
        backgroundcolor=cosmiclatte,
        frametitle={#1}]
}{
    \end{mdframed}
}
